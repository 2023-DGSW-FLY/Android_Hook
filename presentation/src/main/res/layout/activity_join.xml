<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="vm"
            type="com.innosync.hook.feature.auth.join.JoinViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".joinActivity">

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="24dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="20sp"
                android:fontFamily="@font/nanumgothic_bold"
                android:textColor="@color/signitureBlue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="아이디"
                android:fontFamily="@font/nanumgothic_bold"
                android:textSize="13sp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint= "비밀번호"
                android:fontFamily="@font/nanumgothic_bold"
                android:textSize="13sp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="이름"
                android:fontFamily="@font/nanumgothic_bold"
                android:textSize="13sp"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="이메일"
                android:fontFamily="@font/nanumgothic_bold"
                android:textSize="13sp"
                android:inputType="textEmailAddress"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="깃허브 url"
                android:fontFamily="@font/nanumgothic_bold"
                android:textSize="13sp"
                android:inputType="textWebEmailAddress"
                android:layout_marginTop="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="포트폴리오 url"
                android:fontFamily="@font/nanumgothic_bold"
                android:textSize="13sp"
                android:inputType="textWebEmailAddress"
                android:layout_marginTop="30dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonJoin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/signitureBlue"
                android:text="가입하기"
                android:textSize="17sp"
                android:fontFamily="@font/nanumgothic_bold"
                android:textColor="@color/white"
                android:layout_marginTop="35dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
